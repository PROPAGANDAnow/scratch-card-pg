# ========== Web3 Configuration ==========

# Scratch Card NFT Contract Address (Base Mainnet)
NEXT_PUBLIC_SCRATCH_CARD_NFT_ADDRESS=0x...

# Scratch Card NFT Contract Address (Base Sepolia Testnet)
NEXT_PUBLIC_SCRATCH_CARD_NFT_ADDRESS_SEPOLIA=0x...

# USDC Contract Address (Base Mainnet)
NEXT_PUBLIC_USDC_ADDRESS=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913

# Signer Address for Claim Verification
NEXT_PUBLIC_SIGNER_ADDRESS=0x...

# Admin Wallet Address
NEXT_PUBLIC_ADMIN_WALLET_ADDRESS=0x...

# ========== Network Configuration ==========

# Base RPC URL
NEXT_PUBLIC_BASE_RPC_URL=https://mainnet.base.org

# Base Sepolia RPC URL
NEXT_PUBLIC_BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# Basescan API Key
NEXT_PUBLIC_BASESCAN_API_KEY=your_basescan_api_key_here

# ========== WalletConnect Configuration ==========

# WalletConnect Project ID
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# ========== Application Configuration ==========

# Application URL
NEXT_PUBLIC_URL=https://your-app-domain.com

# ========== Feature Flags ==========

# Enable Web3 Minting
NEXT_PUBLIC_ENABLE_WEB3_MINTING=true

# Enable On-Chain Claiming
NEXT_PUBLIC_ENABLE_ON_CHAIN_CLAIMING=true

# Enable Social Features
NEXT_PUBLIC_ENABLE_SOCIAL_FEATURES=true

# Enable Analytics
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Enable Testnet Mode (set to 'true' for development)
NEXT_PUBLIC_TESTNET_MODE=false

# ========== Existing Configuration ==========

# Neynar API Key
NEYNAR_API_KEY=your_neynar_api_key_here

# Neynar Client ID
NEYNAR_CLIENT_ID=your_neynar_client_id_here

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Database Configuration
DATABASE_URL=your_database_url_here

# ========== Subgraph Configuration ==========

# The Graph Studio URL (Production)
NEXT_PUBLIC_SUBGRAPH_URL=https://api.studio.thegraph.com/query/89373/scratch-card-pg/version/latest

# The Graph API Key (for authenticated requests)
SUBGRAPH_API_KEY=fa8e5030975d6c657960901b7f26e1d9

# Local Development Subgraph URL
# NEXT_PUBLIC_SUBGRAPH_URL=http://localhost:8000/subgraphs/name/scratch-card-nft/graphql

# ========== Development Configuration ==========

# Node Environment
NODE_ENV=development