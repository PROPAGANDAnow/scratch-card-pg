// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(cuid())
  address    String   @unique
  fid        Int
  created_at DateTime @default(now()) @db.Timestamp(6)

  // Relations
  cards         Card[]
  sharedCards   Card[] @relation("CardShares")
  receivedCards Card[] @relation("CardReceived")

  @@map("wallets")
}

model Card {
  id                   String    @id @default(cuid())
  user_wallet          String
  user_fid             Int
  payment_tx           String
  prize_amount         Float
  scratched_at         DateTime? @db.Timestamp(6)
  prize_asset_contract String
  numbers_json         Json // Array of CardCell objects
  claimed              Boolean   @default(false)
  payout_tx            String?
  created_at           DateTime  @default(now()) @db.Timestamp(6)
  scratched            Boolean   @default(false)
  prize_won            Boolean   @default(false) // New field to track if prize was won
  token_id             Int
  contract_address     String
  shared_from_user_id  String?
  shared_to_user_id    String?

  // Relations
  user        User  @relation(fields: [user_wallet], references: [address], onDelete: Cascade)
  shared_from User? @relation("CardShares", fields: [shared_from_user_id], references: [id])
  shared_to   User? @relation("CardReceived", fields: [shared_to_user_id], references: [id])

  @@unique([token_id]) // Assuming card_no should be unique
  @@map("cards")
}

model Notification {
  id         String   @id @default(cuid())
  user_fid   Int // User's Farcaster FID
  token      String // Notification token for this app
  created_at DateTime @default(now()) @db.Timestamp(6)
  updated_at DateTime @updatedAt @db.Timestamp(6)

  @@map("notifications")
}

model Stats {
  id         Int      @id @default(1)
  cards      Int      @default(0)
  reveals    Int      @default(0)
  winnings   Float    @default(0)
  created_at DateTime @default(now()) @db.Timestamp(6)
  updated_at DateTime @updatedAt @db.Timestamp(6)

  @@map("stats")
}
